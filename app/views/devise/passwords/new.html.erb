<div class="container-fluid login-page position-relative pt-5">
  <div class="container">
    <div class="row">
      <div class="offset-md-3 offset-sm-0 col-md-6 py-5 px-2 px-md-5">
        <div class="login-container px-4 py-5 mb-6 bg-white rounded shadow">
          <h6 class="text-center mb-3 h3">Forgot Password</h6>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Send me reset password instructions" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="login-footer">
      <p class="text-center text-white"></p>
    </div>
  </div>
</div>
